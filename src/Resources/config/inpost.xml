<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>API Configuration</title>
        <title lang="pl-PL">Konfiguracja API</title>

        <input-field>
            <name>inPostOrganizationId</name>
            <label>Organization ID</label>
            <label lang="pl-PL">ID organizacji</label>
            <placeholder>Organization ID</placeholder>
            <placeholder lang="pl-PL">ID organizacji</placeholder>
            <required>true</required>
        </input-field>

        <input-field>
            <name>inPostAccessToken</name>
            <label>Access token</label>
            <label lang="pl-PL">Token do API</label>
            <placeholder>Access token</placeholder>
            <placeholder lang="pl-PL">Token do API</placeholder>
            <required>true</required>
        </input-field>

        <input-field type="single-select">
            <name>inPostEnvironment</name>
            <label>Environment</label>
            <label lang="pl-PL">Środowisko</label>
            <placeholder>Choose environment</placeholder>
            <placeholder lang="pl-PL">Wybierz środowisko</placeholder>
            <required>true</required>
            <options>
                <option>
                    <id>sandbox</id>
                    <name>Sandbox</name>
                    <name lang="pl-PL">Deweloperskie</name>
                </option>
                <option>
                    <id>production</id>
                    <name>Production</name>
                    <name lang="pl-PL">Produkcyjne</name>
                </option>
            </options>
        </input-field>

        <input-field>
            <name>inPostWidgetToken</name>
            <label>Widget token</label>
            <label lang="pl-PL">Token do mapy (widgetu)</label>
            <placeholder>Widget token</placeholder>
            <placeholder lang="pl-PL">Token do mapy (widgetu)</placeholder>
            <required>true</required>
        </input-field>
        <input-field type="single-select">
            <name>inPostSendingMethod</name>
            <label>Sending method</label>
            <label lang="pl-PL">Metoda nadania</label>
            <placeholder>Choose sending method</placeholder>
            <placeholder lang="pl-PL">Wybierz metodę nadania</placeholder>
            <options>
                <option>
                    <id>dispatch_order</id>
                    <name>Pickup by courier</name>
                    <name lang="pl-PL">Odebranie przez kuriera</name>
                </option>
                <option>
                    <id>parcel_locker</id>
                    <name>Parcel locker</name>
                    <name lang="pl-PL">Nadanie w paczkomacie</name>
                </option>
            </options>
            <required>true</required>
        </input-field>
    </card>
</config>
